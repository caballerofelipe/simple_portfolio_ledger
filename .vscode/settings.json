{
    "pylint.args": [
        "--disable=W0212",
        "--disable=W0105",
    ],
    "cSpell.diagnosticLevel": "Hint",
    "black-formatter.args": [
        "--skip-string-normalization",
        "--line-length=100"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "autoDocstring": {
        "docstringFormat": "numpy"
    }
}