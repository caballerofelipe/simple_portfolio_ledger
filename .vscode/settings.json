{
    "pylint.args": [
        // "--disable=W0212", // Protected Access
        // "--disable=W0105", // Pointless String Statement
        // "--disable=C0301", // Line too long
        // "--disable=C0302", // Too many lines
        // "--disable=C0115", // Missing Class Docstring
        // "--disable=C0116", // Missing Function Docstring
    ],
    // â†“ Change to "Hint" to not show spell checker in problems
    "cSpell.diagnosticLevel": "Hint",
    "black-formatter.args": [
        "--skip-string-normalization",
        "--line-length=100"
    ],
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "autoDocstring": {
        "docstringFormat": "numpy"
    },
    "cSpell.words": [
        "autofilter",
        "autofit",
        "Classmethods",
        "complevel",
        "complib",
        "cumsum",
        "downcasting",
        "dtypes",
        "ffill",
        "fillna",
        "isna",
        "iterrows",
        "namedict",
        "ndarray",
        "opid",
        "pytables",
        "storer",
        "subopid",
        "typedict",
        "uninvest",
        "whatis"
    ]
}